@using PaisesEBandeiras.Models
@model List<PaisesModel>

<div class="container mt-4">

    <h1>@ViewBag.Titulo</h1> 

    <div class="mt-4">
        <a href="@Url.Action("PaisTelaFiltros", "Paises")" class="btn btn-secondary">Voltar</a>
    </div>

    <div class="table-responsive mt-4">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nome do País</th>
                    <th>Capital</th>
                    <th>Bandeira</th>
                    <th>Área (km²)</th>
                    <th>População</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pais in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("PaisDetalhes", "Paises", new { nome = pais.NomePais })">
                                @pais.NomePais
                            </a>
                        </td>
                        <td>@pais.NomeCapital</td>
                        <td>
                            @if (!string.IsNullOrEmpty(pais.Bandeira))
                            {
                                <img src="@pais.Bandeira" alt="Bandeira de @pais.NomePais" style="width: 50px; height: auto;" />
                            }
                        </td>
                        <td>@pais.Area</td>
                        <td>@pais.Populacao?.ToString("N0")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>



</div>
