@using PaisesEBandeiras.Models; 
@using PaisesEBandeiras.Controllers;
@model List<PaisesModel>

<div class="container mt-5">

    <h1 class="text-center mb-4">Todos os Países do Mundo</h1>
    
    <div class="alert alert-info text-center mb-4">
        <p><strong>Explore a lista completa dos países do mundo!</strong></p>
        <p>Você pode visualizar informações detalhadas como a capital, área, população e a bandeira de cada país. Além disso, a página oferece filtros para facilitar a busca por países específicos, ajudando você a encontrar o que procura de forma rápida e eficiente.</p>
    </div>

    <div class="listaPaises">
        <h2 class="text-center mb-4">Lista de Países</h2>
        <table id="PaisesId" class="table table-striped table-bordered mx-auto" style="max-width: 1000px;">
            <thead>
                <tr>
                    <th>Nome do País</th>
                    <th>Capital</th>
                    <th>Bandeira</th>
                    <th>Área (km²)</th>
                    <th>População</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pais in Model)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("PaisDetalhes", "Paises", new { nome = pais.NomePais })">
                                @pais.NomePais
                            </a>
                        </td>
                        <td>@pais.NomeCapital</td>
                        <td>
                            @if (!string.IsNullOrEmpty(pais.Bandeira))
                            {
                                <img src="@pais.Bandeira" alt="Bandeira de @pais.NomePais" style="width: 50px; height: auto;" />
                            }
                        </td>
                        <td>@pais.Area</td>
                        <td>@pais.Populacao?.ToString("N0")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
